# App 
APP_NAME="oauth2-server"
APP_DEBUG=true
APP_BASE_URL="http://localhost:8080"
APP_LOGO_URL=

# Product
PRODUCT_NAME="OAuth2 Server"
PRODUCT_URL="http://localhost:3000"
SUPPORT_EMAIL="support@localhost"
COMPANY_NAME="OAuth2 Server Inc."
LOGO_URL=

# HTTP
HTTP_PORT=8080
HTTP_REQUEST_TIMEOUT=30s
HTTP_SERVER_SHUTDOWN_TIMEOUT=5s
HTTP_RATE_LIMIT=100
HTTP_RATE_LIMIT_DURATION=60s

# CORS
CORS_ALLOWED_ORIGINS="http://localhost:8080,http://localhost:3000"
CORS_ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS,HEAD"
CORS_ALLOWED_HEADERS="Accept,Authorization,Content-Type,Origin,User-Agent,X-Requested-With"
CORS_ALLOWED_CREDENTIALS=true
CORS_MAX_AGE=300

# App build version or current commit hash
COMMIT_HASH=localhost

# Database
DATABASE_URL="postgresql://pguser:pgpass@127.0.0.1/pgdb?sslmode=disable"
DATABASE_MAX_OPEN_CONNS=20

# Redis
REDIS_URL="redis://localhost:6379/0"
REDIS_POOL_SIZE=10

# Queue
WORKER_CONCURRENCY=10
QUEUE_NAME="default"
QUEUE_TASK_DEADLINE=300s
QUEUE_TASK_RETRY_LIMIT=3

# Auth
OAUTH_SIGNING_KEY=
AUTHORIZED_HOME_URI="http://localhost:3000"

# Mail
POSTMARK_SERVER_TOKEN=
POSTMARK_ACCOUNT_TOKEN=
MAILER_FROM_EMAIL=
MAILER_FROM_NAME=

# Session
SESSION_SIGNING_KEY=
SESSION_COOKIE_NAME="oauth2-server-session"
SESSION_COOKIE_LIFE_TIME=86400
SESSION_COOKIE_DOMAIN="localhost"
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE="lax"
SESSION_EXPIRES_IN=86400
SESSION_PREFIX="session:"